<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="meshRow" format="integer" />
    <attr name="meshColumn" format="integer" />
    <attr name="meshGridColor" format="reference|color" />
    <attr name="meshGridWidth" format="dimension" />
    <attr name="meshMaskColor" format="reference|color" />
    <attr name="meshDebug" format="boolean" />

    <declare-styleable name="BitmapWarpView">
        <attr name="android:src" format="reference" />
        <attr name="meshRow" />
        <attr name="meshColumn" />
        <attr name="meshGridColor" />
        <attr name="meshGridWidth" />
        <attr name="meshMaskColor" />
        <attr name="meshDebug" />
    </declare-styleable>

    <declare-styleable name="BitmapRippleView">
        <attr name="android:src" format="reference" />
        <attr name="meshRow" />
        <attr name="meshColumn" />
        <attr name="meshGridColor" />
        <attr name="meshGridWidth" />
        <attr name="meshMaskColor" />
        <attr name="meshDebug" />
    </declare-styleable>

    <attr name="curtainTouchable" format="boolean" />
    <attr name="curtainMaxPercent" format="float" />

    <declare-styleable name="BitmapCurtainView">
        <attr name="android:src" format="reference" />
        <attr name="meshRow" />
        <attr name="meshColumn" />
        <attr name="meshGridColor" />
        <attr name="meshGridWidth" />
        <attr name="meshMaskColor" />
        <attr name="meshDebug" />
        <attr name="curtainTouchable" />
        <attr name="curtainMaxPercent" />
    </declare-styleable>

    <declare-styleable name="CurtainView">
        <attr name="meshRow" />
        <attr name="meshColumn" />
        <attr name="meshGridColor" />
        <attr name="meshGridWidth" />
        <attr name="meshMaskColor" />
        <attr name="meshDebug" />
        <attr name="curtainTouchable" />
        <attr name="curtainMaxPercent" />
        <attr name="curtainCoverLayout" format="reference" />
        <attr name="curtainContentLayout" format="reference" />
    </declare-styleable>

</resources>