<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:gravity="center"
    android:orientation="vertical">

    <com.twigcodes.ui.layout.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/item_background"
            app:cardCornerRadius="10dp">

            <com.twigcodes.ui.GraffitiView
                android:id="@+id/path_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

    </com.twigcodes.ui.layout.SquareLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/undo_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_undo_white" />

        <ImageView
            android:id="@+id/clear_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_refresh_white" />

    </LinearLayout>

</LinearLayout>