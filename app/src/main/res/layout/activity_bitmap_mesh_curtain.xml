<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="370dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <com.twigcodes.ui.bitmapmesh.BitmapCurtainView
            android:id="@+id/bitmap_curtain_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/demo_plaster"
            app:meshColumn="30"
            app:meshDebug="false"
            app:meshGridColor="@color/colorPrimary"
            app:meshGridWidth="0.5dp"
            app:meshMaskColor="@color/mask_color"
            app:meshRow="40" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/debug_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/common_main_circle_stroke_background"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_debug_main" />

        <ImageView
            android:id="@+id/open_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/common_main_circle_stroke_background"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_door_open_main" />

        <ImageView
            android:id="@+id/close_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/common_main_circle_stroke_background"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_door_close_main" />

    </LinearLayout>

</LinearLayout>