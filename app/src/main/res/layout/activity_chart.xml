<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="138dp"
        android:background="@drawable/smart_corner_top_gradient_background">

        <View
            android:id="@+id/legend_view"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#22000000" />

        <TextView
            android:id="@+id/done_textview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/smart_corner_top_white_background" />

        <com.twigcodes.ui.ChartView
            android:id="@+id/chart_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/done_textview"
            android:layout_below="@id/legend_view" />

    </RelativeLayout>

</RelativeLayout>