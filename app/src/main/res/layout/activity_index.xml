<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        style="@style/CommonCardView.Large"
        android:layout_width="100dp"
        android:layout_height="500dp">

        <com.twigcodes.ui.IndexView
            android:id="@+id/indexview"
            android:layout_width="50dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:OffsetDirection="right"
            app:debounceTime="500"
            app:debug="true"
            app:idleColor="@color/text_secondary"
            app:indexedColor="@color/text_primary"
            app:textSize="10sp"
            tools:ignore="SmallSp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CommonCardView.Large"
        android:layout_width="100dp"
        android:layout_height="500dp"
        android:layout_marginStart="20dp">

        <com.twigcodes.ui.IndexView
            android:id="@+id/indexview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:idleColor="@color/text_secondary"
            app:indexedColor="@color/colorPrimary"
            app:textSize="12sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>