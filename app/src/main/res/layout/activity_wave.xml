<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="10dp">

        <com.twigcodes.ui.WaveView
            android:id="@+id/wave_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:waveBackColor="@color/colorPrimaryLight"
            app:waveFrontColor="@color/colorPrimary"
            app:waveHeight="10dp"
            app:waveLengthMultiple="0.8" />

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="50dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:max="100"
        android:progress="80"
        android:progressDrawable="@drawable/progress_primary_corner_border_background" />

</LinearLayout>