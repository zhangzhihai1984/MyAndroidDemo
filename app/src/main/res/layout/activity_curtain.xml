<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <com.twigcodes.ui.CurtainView
            android:id="@+id/curtain_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:curtainContentLayout="@layout/curtain_content_layout"
            app:curtainCoverLayout="@layout/curtain_cover_layout"
            app:meshColumn="30"
            app:meshGridColor="@color/colorPrimary"
            app:meshGridWidth="1dp"
            app:meshMaskColor="@color/mask_color"
            app:meshRow="40" />

    </androidx.cardview.widget.CardView>

</LinearLayout>