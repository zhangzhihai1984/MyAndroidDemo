<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="330dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="10dp">

        <com.twigcodes.ui.layout.CurtainLayout
            android:id="@+id/bitmap_curtain_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/demo_tree"
            app:meshColumn="30"
            app:meshGridColor="@color/colorPrimary"
            app:meshGridWidth="1dp"
            app:meshMaskColor="@color/image_tint"
            app:meshRow="30" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="10dp">

        <com.twigcodes.ui.layout.CurtainLayout
            android:id="@+id/bitmap_curtain_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/demo_slamdunk"
            app:meshColumn="30"
            app:meshGridColor="@color/colorPrimary"
            app:meshGridWidth="1dp"
            app:meshRow="30">

            <Button
                android:id="@+id/text_button"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/button_primary_corner_background"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </com.twigcodes.ui.layout.CurtainLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/open_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_door_open_white" />

        <ImageView
            android:id="@+id/close_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_door_closed_white" />

        <ImageView
            android:id="@+id/debug_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_debug_white" />

    </LinearLayout>

</LinearLayout>