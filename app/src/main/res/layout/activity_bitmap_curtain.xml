<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="330dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="10dp">

        <com.twigcodes.ui.CurtainView
            android:id="@+id/bitmap_curtain_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/demo_tree"
            app:curtainTextureLayout="@layout/curtain_texture_layout"
            app:meshColumn="30"
            app:meshGridColor="@color/colorPrimary"
            app:meshGridWidth="1dp"
            app:meshMaskColor="@color/image_tint"
            app:meshRow="30" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="10dp">

        <com.twigcodes.ui.CurtainView
            android:id="@+id/bitmap_curtain_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:curtainTextureLayout="@layout/curtain_texture_layout2"
            app:meshColumn="30"
            app:meshGridColor="@color/colorPrimary"
            app:meshGridWidth="1dp"
            app:meshRow="30" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/open_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_door_open_white" />

        <ImageView
            android:id="@+id/close_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_door_closed_white" />

        <ImageView
            android:id="@+id/debug_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_debug_white" />

    </LinearLayout>

</LinearLayout>