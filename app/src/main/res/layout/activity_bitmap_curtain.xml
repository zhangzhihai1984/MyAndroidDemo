<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="10dp">

        <com.twigcodes.ui.bitmapmesh.BitmapCurtainView
            android:id="@+id/bitmap_curtain_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/demo_tree"
            app:meshColumn="30"
            app:meshGridColor="@color/colorPrimary"
            app:meshGridWidth="1dp"
            app:meshMaskColor="@color/image_tint"
            app:meshRow="30" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/debug_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_mask_circle_background"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ic_debug_white" />

</LinearLayout>