<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_900">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/percent_textview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/common_mask_circle_background"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/open_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_door_open_white" />

        <ImageView
            android:id="@+id/close_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_door_closed_white" />

        <ImageView
            android:id="@+id/debug_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/common_mask_circle_background"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ic_debug_white" />

    </LinearLayout>

    <View
        android:id="@+id/mask_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black" />

</RelativeLayout>