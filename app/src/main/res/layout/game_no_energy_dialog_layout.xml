<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="263dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@mipmap/game_no_energy_background">

        <TextView
            android:id="@+id/no_energy_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/choosing_game_refight_later"
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/no_energy_textview"
            android:layout_centerHorizontal="true"
            android:text="@string/choosing_game_no_energy"
            android:textColor="#333333"
            android:textSize="18sp" />

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/got_it_textview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/blue_solid_bottom_corner_background"
        android:gravity="center"
        android:text="@string/choosing_game_got_it"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>