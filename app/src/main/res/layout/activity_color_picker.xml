<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:gravity="center"
    android:orientation="vertical">

    <com.twigcodes.ui.layout.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            app:cardBackgroundColor="@color/item_background"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <com.twigcodes.ui.colorpicker.ColorPickerView
                android:id="@+id/color_picker_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:alphaCornerRadius="5dp"
                app:brightnessCornerRadius="5dp"
                app:brightnessHeight="20dp"
                app:hasAlpha="true"
                app:hasAlphaIndicator="true"
                app:paletteMarginInner="20dp"
                app:paletteWidth="40dp"
                app:pickerHaloWidth="2dp" />

        </androidx.cardview.widget.CardView>

    </com.twigcodes.ui.layout.SquareLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/palette_cardview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/item_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/palette_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_palette" />

    </androidx.cardview.widget.CardView>

</LinearLayout>