<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonTheme" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#33000000</item>
    </style>

    <style name="FramelessDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--        <item name="android:windowFrame">@null</item>-->
        <!--        <item name="android:windowIsFloating">true</item>-->
        <!--        <item name="android:backgroundDimEnabled">true</item>-->
        <!--        <item name="android:backgroundDimAmount">0.6</item>-->
        <!--        <item name="android:alpha">0.8</item>-->
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="FullScreenTheme" parent="CommonTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="CommonCardView" parent="CardView">
        <item name="cardBackground">@color/item_background</item>
    </style>

    <style name="CommonCardView.Large" parent="CommonCardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="CommonCardView.Middle" parent="CommonCardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="CommonSmartTabLayout">
        <item name="stl_clickable">false</item>
        <item name="stl_customTabTextLayoutId">@layout/item_indicator_primary</item>
        <item name="stl_dividerColor">@android:color/transparent</item>
        <item name="stl_drawDecorationAfterTab">true</item>
        <item name="stl_indicatorColor">@color/colorPrimaryDark</item>
        <item name="stl_indicatorCornerRadius">2dp</item>
        <item name="stl_indicatorGravity">center</item>
        <item name="stl_indicatorInterpolation">linear</item>
        <item name="stl_indicatorThickness">3dp</item>
        <item name="stl_indicatorWidth">auto</item>
        <item name="stl_underlineColor">@android:color/transparent</item>
    </style>

</resources>
